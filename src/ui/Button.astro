---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'button'> {
  className?: string
  colorScheme?: 'success' | 'danger' | 'warning'
}

const { colorScheme, className, ...props } = Astro.props

const getClassColor = () => {
  if (colorScheme === 'danger') return 'bg-red-300 border-red-400 text-red-950 hover:bg-red-400'
  if (colorScheme === 'warning') return 'bg-yellow-300 border-yellow-400 text-yellow-950'
  return 'bg-emerald-300 border-emerald-400 text-emerald-950'
}
---

<button class={`${getClassColor()} ${className} border-4 rounded-xl font-bold p-2 active:scale-95 transition-all`} {...props}>
  <slot />
</button>
